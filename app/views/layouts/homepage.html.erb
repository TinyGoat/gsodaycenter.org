<body>

  <%= render '/shared/emergency' %>
  <%= render '/shared/header' %>

  <!-- hero unit -->
  <section id="hero-unit" class="lander">

    <div class="content-compact">
      <h1 class="brighten is-centered xl">The Interactive Resource Center is a refuge for anyone experiencing or who may experience homelessness in Greensboro, NC.</h1>
    </div>

    <div class="actions">
      <div class="button outline">
        <%= link_to 'Learn More About Us', '/about/facilities' %>
      </div>
      <div class="button outline">
        <%= link_to 'Donate Now', '/take-action/donors' %>
      </div>
    </div>

    <div class="more">
      <h5>Read More</h5>
      <%= fa_icon "chevron-down", :class => "arrow" %>
    </div>

  </section>

  <!-- content -->
  <section id="core">

    <div class="content">
      <h4 class="is-centered xl">We're an innovative day resource center for people experiencing homelessness or trying to keep from becoming homeless in Guilford County, North Carolina.</h4>

    </div>

    <div class="row">
      <%= yield %>
    </div>
  </section>

  <!-- explore -->
  <section class="explore">
    <div class="row">
      <header class="full-width">
        <h2 class="brighten">Explore the IRC</h2>
      </header>
      <div class="third" id="volunteers">
        <h2><%= fa_icon "flag" %> <%= link_to 'Volunteers', '/take-action/volunteers' %> </h2>
      </div>
      <div class="third" id="donors">
        <h2><%= fa_icon "key" %> <%= link_to 'Donate', '/take-action/donors' %> </h2>
      </div>
      <div class="third" id="guests">
        <h2><%= fa_icon "home" %> <%= link_to 'Guests', '/take-action/guests' %> </h2>
      </div>
    </div>
  </section>

  <!-- newsletter roadblock -->
  <section class="roadblock">
    <h3>Join the List</h3>
    <p>Join our mailing list for occasional updates about our important work.</p>
    <!--Begin CTCT Sign-Up Form-->
